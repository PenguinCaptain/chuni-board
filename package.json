{
  "name": "chuni-board",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "nodemon --ext ts --exec npm run start",
    "build": "dotenvx run -f .env.production -- node scripts/build.mjs",
    "start": "dotenvx run -f .env.development.local -f .env.development -- tsx src/app.ts",
    "pkg": "node scripts/pkg.mjs",
    "dist": "node scripts/dist.mjs",
    "all": "npm run build && npm run pkg && npm run dist",
    "test": "jest --passWithNoTests",
    "prepare": "husky"
  },
  "author": "OshinoPenguin",
  "license": "MIT",
  "description": "A CHUNITHM karaoke board",
  "bin": "build/app.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "public",
      "default"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@dotenvx/dotenvx": "^1.39.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/async-exit-hook": "^2.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/ntp-client": "^0.5.0",
    "@types/ws": "^8.5.14",
    "@yao-pkg/pkg": "^6.3.2",
    "archiver": "^7.0.1",
    "axios": "^1.8.2",
    "esbuild": "^0.25.0",
    "esbuild-node-externals": "^1.18.0",
    "esbuild-plugin-obfuscator": "^1.2.4",
    "esbuild-plugin-tsc": "^0.5.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "pkg-fetch": "^3.5.2",
    "prettier": "^3.5.3",
    "rcedit": "^4.0.1",
    "resedit": "^2.0.3",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@mikro-orm/better-sqlite": "^6.4.7",
    "@mikro-orm/core": "^6.4.7",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "^6.4.7",
    "async-exit-hook": "^2.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "nodemon": "^3.1.9",
    "ntp-client": "^0.5.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.1"
  }
}
